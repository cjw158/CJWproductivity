{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CJWproductivity",
  "version": "0.1.0",
  "identifier": "com.cjwproductivity.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "splash",
        "title": "CJWproductivity",
        "url": "/#splash",
        "width": 280,
        "height": 220,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "center": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "focus": true,
        "backgroundColor": "#0f0f14"
      },
      {
        "label": "main",
        "title": "CJWproductivity",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "minWidth": 900,
        "minHeight": 600,
        "visible": false,
        "backgroundColor": "#0A0A0F"
      },
      {
        "label": "spotlight",
        "title": "Quick Capture",
        "width": 600,
        "height": 200,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "focus": true
      },
      {
        "label": "island",
        "title": "Dynamic Island",
        "url": "/#island",
        "width": 360,
        "height": 48,
        "x": 780,
        "y": 10,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "CJW",
    "copyright": "Copyright © 2024-2025 CJW. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "零阻力任务管理工具",
    "longDescription": "CJWproductivity 是一款现代化的任务管理和生产力工具，帮助您高效管理日常任务、笔记和工作流程。",
    "licenseFile": "nsis/LICENSE.txt",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "digestAlgorithm": "sha256",
      "allowDowngrades": true,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "nsis/header.bmp",
        "sidebarImage": "nsis/sidebar.bmp",
        "installMode": "currentUser",
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": false,
        "installerHooks": "./windows/hooks.nsh"
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:cjwproductivity.db"]
    }
  }
}
